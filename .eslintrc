{
    "extends": "airbnb-base",
    "globals": {
        "App": true,
        "wx": true,
        "getApp": true,
        "getCurrentPages": true,
        "Page": true,
        "Component": true,
        "Behavior": true
    },
    "rules": {
        "eqeqeq": "off",
        "no-plusplus": [
            "error",
            {
                "allowForLoopAfterthoughts": true
            }
        ],
        "no-underscore-dangle": 0,
        "indent": [
            "error",
            4,
            {
                "SwitchCase": 1,
                "flatTernaryExpressions": true
            }
        ],
        "func-names": [
            "error",
            "as-needed"
        ],
        "no-param-reassign": [
            "error",
            {
                "props": false
            }
        ],
        "max-len": ["error", { "code": 150 }]
    }
}